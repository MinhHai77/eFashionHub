@model ShopHai.Models.User
<section style="margin-bottom:40px" class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content d-md-flex justify-content-between align-items-center">
                <div class="mb-3 mb-md-0">
                    <h2 style="color: pink">Shop Hai</h2>
                    <p>Very us move be blessed multiply night</p>
                </div>
                <div class="page_link">
                    <a href="index.html">Home</a>

                </div>
            </div>
        </div>
    </div>
</section>

<div style="display: flex; justify-content: center; align-items: center; ">
    <div>
        
       
        <form asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="Email">Email:</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-dark"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password:</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-dark"></span>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn" style="background-color: pink;">Login
                </button>
            </div
            <p>Don't have account ?<a asp-controller="Home" asp-action="Register">Register NOW !!</a></p>
            <div asp-validation-summary="All" class="text-dark"></div>
        </form>
    </div>
</div>
